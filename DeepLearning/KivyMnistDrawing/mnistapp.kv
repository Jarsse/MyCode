#:kivy 1.11.1

<DrawingScreen>:
    canvas:
        Color:
            rgba: .25, .25, .25, .8

        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        pos: 0, 0
        size: root.width, root.height
        background_color: 0, 0, 1, 0.9
        orientation: "horizontal"

        Button:
            id: Start
            size_hint: 0.2, 0.1
            pos_hint: {"x":0.2, "y":0}
            text: "Start"
            on_press: root.start_button(self) if self.text == "Start" else root.reset_button()

        Button:
            size_hint: 0.2, 0.1
            pos_hint: {"x":.55, "y":0}
            text: "Predict"
            on_release: root.predict()

        Label:
            id: Prediction1
            text: "Prediction: "
            size_hint: 0.2, 0.1
            pos_hint: {"x":.7, "y":.1}

        GridLayout:
            id: Grid
            cols: 28
            rows: 28
            pos_hint: {"x":.2, "y":.2}
            size_hint: 0.55, 0.6

